@model IEnumerable<ModernGridViewCrud.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="text-center">
    <h1 class="display-4">Employee Management</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Create Employee</h3>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" name="FirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="LastName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Designation</label>
                <input type="text" name="Designation" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Date of Joining</label>
                <input type="date" name="DateOfJoining" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Gender</label>
                <div>
                    <input type="radio" name="Gender" value="Male" checked /> Male
                    <input type="radio" name="Gender" value="Female" /> Female
                </div>
            </div>
            <div class="form-group">
                <label>Qualification</label>
                <select name="Qualification" class="form-control">
                    <option value="10th">10th</option>
                    <option value="12th">12th</option>
                    <option value="B-Tech">B-Tech</option>
                    <option value="PG">PG</option>
                </select>
            </div>
            <div class="form-group">
                <label>State</label>
                <select name="State" class="form-control">
                    <option value="Odisha">Odisha</option>
                    <option value="West Bengal">West Bengal</option>
                    <option value="MP">MP</option>
                </select>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-8">
        <h3>Registered Employees</h3>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>DOJ</th>
                    <th>Gender</th>
                    <th>Qualification</th>
                    <th>State</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Designation</td>
                        <td>@item.DateOfJoining</td>
                        <td>@item.Gender</td>
                        <td>@item.Qualification</td>
                        <td>@item.State</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
